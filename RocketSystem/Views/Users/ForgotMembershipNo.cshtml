@model RocketSystem.Models.User

@{
    //ViewBag.Title = "ForgotMembershipmun";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Forgot Membership Number</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
    <!--===============================================================================================-->
    <link rel="icon" href="~/img/favicon.png" />
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="limiter">
            <div class="container-login100">
                <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
                    <form class="login100-form validate-form">
                        <span class="login100-form-title p-b-49">
                            会員番号をお忘れですか？
                        </span>
                        <br /><br /><br />
                        <div class="wrap-input100 validate-input m-b-23">
                            <span class="label-input100"><i class="fas fa-user"></i> Enter Kathakana Name　ユーザー名を入力して下さい</span>
                            @Html.EditorFor(model => model.katakanaName, new { htmlAttributes = new { @class = "input100" } })
                            @Html.ValidationMessageFor(m => m.katakanaName, "", new { @class = "text-danger" })
                        </div>

                        @*<div class="wrap-input100 validate-input m-b-23">
                                <span class="label-input100"><i class="fas fa-user"></i> Enter Date of Birth　ユーザー名を入力して下さい</span>
                                @Html.EditorFor(model => model.dateOfBirth, new { htmlAttributes = new { @class = "input100" } })
                                @Html.ValidationMessageFor(m => m.dateOfBirth, "", new { @class = "text-danger" })
                            </div>*@

                        <div class="wrap-input100 validate-input m-b-23">
                            <span class="label-input100"><i class="fas fa-user"></i> Enter Date of Birth　ユーザー名を入力して下さい</span>
                            @Html.EditorFor(model => model.dateOfBirth, new { htmlAttributes = new { @class = "input100 input-group date", @name = "birthday", @id = "demoDate", @autocomplete = "off" } })
                            @Html.ValidationMessageFor(m => m.dateOfBirth, "", new { @class = "text-danger" })
                        </div>

                        @{if (ViewBag.forget != "")
                            {
                                <div class="form-group">
                                    <div class="col-md-2"></div>
                                    <div class="col-md-10">
                                        <span style="color:red;">@ViewBag.forget</span>
                                    </div>
                                </div>
                            } }
                        <div class="text-right p-t-8 p-b-31">
                        </div>
                        <br /><br />
                        <div class="container-login100-form-btn">
                            <div class="wrap-login100-form-btn">
                                <div class="login100-form-bgbtn"></div>
                                <button class="login100-form-btn">
                                    continue
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
    <div id="dropDownSelect1"></div>

    <link rel="stylesheet" href="http://code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="http://code.jquery.com/ui/1.11.4/jquery-ui.js"></script>

    <script type="text/javascript">
        $(function () {
            $('#demoDate').datepicker($.extend({
                showMonthAfterYear: true,
                changeYear: true,
                changeMonth: true,
                yearRange: "1900:2019",
                dateFormat: "yy-mm-dd"
            },
                $.datepicker.regional['ja']
            ));

        });
    </script>
    <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <link href="https://code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css" rel="stylesheet" type="text/css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.1/i18n/jquery-ui-i18n.min.js"></script>


</body>
</html>

